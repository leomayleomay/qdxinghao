<table border='0' cellpadding='0' cellspacing='0' id="data">
  <tr>
    <th>名称</th>
  </tr>

  <% Category.for(model).each do |category| %>
    <tr>
      <td><%=h category.name %></td>
      <td><%= link_to '编辑', :controller => "categories", :action => "edit", :id => category.id, :model => model %></td>
      <td><%= link_to '删除', category, :confirm => '确定删除么?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to '创建新类别', :controller => "categories", :action => "new", :model => model %>
